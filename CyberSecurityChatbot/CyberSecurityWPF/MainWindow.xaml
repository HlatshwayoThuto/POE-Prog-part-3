<Window x:Class="CyberSecurityWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberSecurity Chatbot" Height="600" Width="800">
    <Grid Margin="10">
        <TextBlock Text="CyberSecurity Awareness Bot" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

        <ListBox Name="ChatHistory" Margin="0,60,0,80" FontSize="14" />

        <TextBox Name="UserInput" Height="30" VerticalAlignment="Bottom" Margin="0,0,100,20" FontSize="14"/>
        <Button Content="Send" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,20" Click="SendButton_Click"/>
    </Grid>
</Window>